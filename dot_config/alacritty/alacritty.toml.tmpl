import = ["/home/bgr/.config/alacritty/themes/monokai-pro-alacritty.toml"]
live_config_reload = true

[bell]
animation = "EaseOutExpo"
color = "#ffffff"
duration = 50

[cursor]
blink_interval = 750
blink_timeout = 0
unfocused_hollow = true
vi_mode_style = "Block"

[cursor.style]
blinking = "On"
shape = "Underline"

{{- if eq .chezmoi.hostname "archon" }}
[font]
size = 14
{{- end }}

[font.normal]
family = "IosevkaTerm NFM"

[mouse]
hide_when_typing = false

[[mouse.bindings]]
action = "PasteSelection"
mode = "~Vi"
mouse = "Middle"

[scrolling]
history = 10000
multiplier = 1

[selection]
save_to_clipboard = true
semantic_escape_chars = ",â”‚`|:\"' ()[]{}<>\t"

[window]
blur = true
decorations = "full"
dynamic_title = true
opacity = 0.1
title = "Alacritty"

[window.padding]
x = 15
y = 15
